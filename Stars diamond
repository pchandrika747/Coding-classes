class Starsdiamond
{
public static void main(String args[])
{
  int n=4;
  int i,j,k;
for(i=1;i<=n;i++)
{
   for (k=1;k<=(n-i); k++)
  {
     System.out.print("   ");
   }
for(j=1; j<=(2*i-1);j++)
   System.out.print(" * ");
System.out.println("\n");
}
  for(i=n-1;i>=1;i--)
{
    for(k=1;k<=(n-i);k++)
    System.out.print("   ");  //4-1
  for(j=1;j<=(2*i-1);j++)
  System.out.print(" * ");
System.out.println("\n");
}
}
}
